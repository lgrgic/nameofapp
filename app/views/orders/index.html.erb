<div class="container">
  <div class="sticky-top">
    <h1>Orders</h1>
    <% if @orders.count == 0 %>
      <h3>You have not placed any orders!</h3>
    <% end %>
  </div>
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm-4 col-md-4">
        <div class="thumbnail orders-page">
          <h1>Order # <%= order.id %>: <%= order.product.name %> </h1>
          <%= link_to image_tag(order.product.image_url, class: "img-responsive"), order %>
          <p><%= order.product.description %> </p>
          <strong>â‚¬ <%= order.product.price %> </strong>
          <h4>Buyer: <%= order.user.first_name %> <%= order.user.last_name %> </h4>
          <h5>Email: <%= order.user.email %> </h5>
        </div>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
