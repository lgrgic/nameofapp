<p id="notice"><%= notice %></p>

  <h1>Our Products</h1>

    <div class="offer">
      <h4>Currently available in our shop</h4>
    </div>
    <div class="container">
      <div class="row">
          <% @products.each do |product| %>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="thumbnail">
              <%= image_tag(product.image_url, class: "img-responsive" ) %>
                <strong>Product name:</strong><p><%= product.name %></p>
                <strong>Details:</strong><p><%= product.description %></p>
                <strong>Photo:</strong><p><%= product.image_url %></p>
                <strong>Color:</strong><p><%= product.colour %></p>
                <strong>Price â‚¬:</strong><p><%= product.price %></p>
              </div>
              <div class="product-buttons">
                  <p><%= link_to 'Show', product %></p>
                  <p><%= link_to 'Edit', edit_product_path(product) %></p>
                  <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              </div>
            </div>
            <% end %>
      </div>
    </div>
<br>
<div>
<%= link_to 'New Product', new_product_path, class:"btn btn-danger" %>
</div>
