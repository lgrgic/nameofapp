  <h1>Our Products</h1>

    <div class="offer">
      <h4>Currently available in our shop</h4>
    </div>
    <div class="container">
      <div class="row">
          <% @products.each do |product| %>
            <div class="col-sm-2 col-md-4">
              <%= image_tag(product.image_url, class: "img-responsive" )  if product.image_url %>
              <br>
                <strong>Product name:</strong><p><%= product.name %></p>
                <strong>Details:</strong><p><%= product.description %></p>
                <strong>Photo:</strong><p><%= product.image_url %></p>
                <%= product.colour %>
                <strong>Price â‚¬:</strong><p><%= product.price %></p>
              <br>
                <td><%= link_to 'Show', product %></td>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
            <% end %>
      </div>
    </div>
