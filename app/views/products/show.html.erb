<p id="notice"><%= notice %></p>
<div class="container">
  <div class="show-product">
    <div class="thumbnail">
      <p>
        <strong>Product name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Details:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Photo:</strong>
        <%= image_tag(@product.image_url, class: "img-responsive show-photo")%>
      </p>

      <p>
        <strong>Color:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Price â‚¬:</strong>
        <%= @product.price %>
      </p>
      <p>
      <strong><span style="font-size:20px;cursor:pointer" onclick="openNav()">See reviews</span></strong>
      </p>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
  </div>
</div>
  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <div id="main">
      <div class="thumbnail">
        <h2><span class="glyphicon glyphicon-ok-circle"><strong> Reviews</strong></span></h2>
        <hr>
        <p>Highest review: <%= @product.highest_rating_comment %> </p>
        <p>Lowest review: <%= @product.lowest_rating_comment %> </p>
      </div>
    </div>
  </div>

<script>
function openNav() {
    document.getElementById("mySidenav").style.width = "280px";
}

function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
}
</script>
