<% @products.each do |product| %>
  <div class="col-md-4">
    <div class="thumbnail">
    <%= image_tag(product.image_url, class: "img-responsive") if product.image_url %>
      <strong>Product name:</strong><p><%= product.name %></p>
      <strong>Details:</strong><p><%= product.description %></p>
      <strong>Photo:</strong><p><%= product.image_url %></p>
      <strong>Color:</strong><p><%= product.colour %></p>
      <strong>Price â‚¬:</strong><p><%= product.price %></p>
    </div>
    <div class="product-buttons">
        <p><%= link_to 'Show', product %></p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  </div>
<% end %>
